{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountNameData": {
            "type": "string",
            "metadata": {
                "description": "Storage Account where the Azure Function will be deployed"
            }
        },
        "containerName": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "containerCPU": {
            "type": "int",
            "defaultValue": 1,
            "allowedValues": [
                1,
                2,
                3,
                4
            ],
            "metadata": {
                "description": "description"
            }
        },
        "containerMemory": {
            "type": "int",
            "defaultValue": 2,
            "allowedValues": [
                2,
                4,
                6,
                8
            ],
            "metadata": {
                "description": "description"
            }
        },
        "plexClaimToken": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "timeZone": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "tagValues": {
            "type": "Object",
            "metadata": {
                "description": "Tags for all resources"
            }
        }
    },
    "functions": [],
    "variables": {
        "containerServiceName": "[concat('ci',parameters('containerName'))]"
    },
    "resources": [
        {   // Resource: Storage account for Plex Data and Config including "Default","data" and "config" share
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('storageAccountNameData')]",
            "apiVersion": "2021-04-01",
            "kind": "StorageV2",
            "tags": "[parameters('tagValues')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "minimumTlsVersion": "TLS1_2",
                "allowBlobPublicAccess": false,
                "allowSharedKeyAccess": true,
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            }
        },
        {   // Resource: "default" share
            "type": "Microsoft.Storage/storageAccounts/blobServices",
            "apiVersion": "2021-04-01",
            "name": "[concat(parameters('storageAccountNameData'), '/default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountNameData'))]"
            ],
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "deleteRetentionPolicy": {
                    "enabled": false
                }
            }
        },
        {   // Resource: "Config" share
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2021-04-01",
            "name": "[concat(parameters('storageAccountNameData'), '/default/plexconfig')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/blobServices', parameters('storageAccountNameData'), 'default')]"
            ]
        },
        {   // Resource: "Data" share
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2021-04-01",
            "name": "[concat(parameters('storageAccountNameData'), '/default/plexdata')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/blobServices', parameters('storageAccountNameData'), 'default')]"
            ]
        },
        {   // Resource: "Transode" share
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2021-04-01",
            "name": "[concat(parameters('storageAccountNameData'), '/default/plextranscode')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/blobServices', parameters('storageAccountNameData'), 'default')]"
            ]
        },
        {   // Resource: Container Instance
            "name": "[variables('containerServiceName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2019-12-01",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/blobServices/containers', parameters('storageAccountNameData'), 'default','plextranscode')]",
                "[resourceId('Microsoft.Storage/storageAccounts/blobServices/containers', parameters('storageAccountNameData'), 'default','plexdata')]",
                "[resourceId('Microsoft.Storage/storageAccounts/blobServices/containers', parameters('storageAccountNameData'), 'default','plexconfig')]"
            ],
            "location": "[resourceGroup().location]",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "plexinc/pms-docker",
                            "environmentVariables": [
                                {
                                    "name": "TZ",
                                    "value": "[parameters('timeZone')]"
                                },
                                {
                                    "name": "PLEX_CLAIM",
                                    "value": "[parameters('plexClaimToken')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": "[parameters('containerCPU')]",
                                    "memoryInGb": "[parameters('containerMemory')]"
                                }
                            },
                            "ports": [
                                {
                                    "port": 32400
                                }
                            ],
                            "volumeMounts": [
                                {
                                    "name": "filesharedata",
                                    "mountPath": "/data"
                                },
                                {
                                    "name": "fileshareconfig",
                                    "mountPath": "/config"
                                },
                                {
                                    "name": "filesharetranscode",
                                    "mountPath": "/transcode"
                                }
                            ]
                        }
                    }
                ],
                "osType": "Linux",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "protocol": "tcp",
                            "port": 32400
                        }
                    ],
                    "dnsNameLabel": "[parameters('containerName')]"
                },
                "volumes": [
                    {
                        "name": "filesharedata",
                        "azureFile": {
                            "shareName": "plexdata",
                            "storageAccountName": "[parameters('storageAccountNameData')]",
                            "storageAccountKey": "[listKeys(parameters('storageAccountNameData'), '2021-04-01').keys[0].value]"
                        }
                    },
                    {
                        "name": "fileshareconfig",
                        "azureFile": {
                            "shareName": "plexconfig",
                            "storageAccountName": "[parameters('storageAccountNameData')]",
                            "storageAccountKey": "[listKeys(parameters('storageAccountNameData'), '2021-04-01').keys[0].value]"
                        }
                    },
                    {
                        "name": "filesharetranscode",
                        "azureFile": {
                            "shareName": "plextranscode",
                            "storageAccountName": "[parameters('storageAccountNameData')]",
                            "storageAccountKey": "[listKeys(parameters('storageAccountNameData'), '2021-04-01').keys[0].value]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}